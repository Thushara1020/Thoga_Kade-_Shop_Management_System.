<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0"
            style="-fx-background-color: linear-gradient(to bottom right, #eef2f3, #dfe9f3);"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EmployeeFormController">

    <children>
        <!-- ðŸ”¹ Sidebar -->
        <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="230" spacing="15"
              style="-fx-background-color: linear-gradient(to bottom, #2f3640, #3b3b98); -fx-padding: 25;">
            <children>

                <Label style="-fx-font-size: 20; -fx-font-weight: bold;" text="Thoga Kade" textFill="white" />

                <!-- Logo -->
                <ImageView fitHeight="139.0" fitWidth="140.0">
                    <image>
                        <Image url="@../img/logo.png" />
                    </image>
                </ImageView>

                <Separator style="-fx-background-color: white;" />

                <Button onAction="#btnDashboardOnAction" text="ðŸ   Dashboard"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;
                               -fx-alignment: CENTER_LEFT; -fx-padding: 10 0 10 15;" />
                <Button onAction="#btnCustomerOnAction" text="ðŸ‘¥  Customers"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;
                               -fx-alignment: CENTER_LEFT; -fx-padding: 10 0 10 15;" />
                <Button onAction="#btnItemOnAction" text="ðŸ“¦  Items"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;
                               -fx-alignment: CENTER_LEFT; -fx-padding: 10 0 10 15;" />
                <Button onAction="#btnSupplierOnAction" text="ðŸšš  Suppliers"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;
                               -fx-alignment: CENTER_LEFT; -fx-padding: 10 0 10 15;" />
                <Button onAction="#btnEmployeeOnAction" text="ðŸ’¼  Employees"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14;
                               -fx-alignment: CENTER_LEFT; -fx-padding: 10 0 10 15;" />

                <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                    <Button onAction="#btnLogoutOnAction" text="ðŸšª Logout"
                            style="-fx-background-color: #e84118; -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-background-radius: 20; -fx-padding: 8 25 8 25;" />
                </VBox>

            </children>
        </VBox>

        <!-- ðŸ”¹ Top Bar -->
        <HBox alignment="CENTER_RIGHT" layoutX="230" prefHeight="60" prefWidth="770"
              style="-fx-background-color: #4e73df; -fx-padding: 0 20 0 20;">
            <children>
                <Label fx:id="lblTitle" text="Employee Management"
                       style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"
                       HBox.hgrow="ALWAYS" />
                <Button onAction="#btnSetting" text="âš™ï¸"
                        style="-fx-background-color: white; -fx-text-fill: #4e73df; -fx-background-radius: 100;
                               -fx-font-size: 16; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <!-- ðŸ”¹ Main Content -->
        <AnchorPane fx:id="mainContent" layoutX="230" layoutY="60" prefHeight="540" prefWidth="770"
                    style="-fx-background-color: white; -fx-background-radius: 15; -fx-border-radius: 15;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 3); -fx-padding: 20;">
            <children>
                <VBox spacing="15" layoutX="30" layoutY="30" prefWidth="840" prefHeight="490"
                      style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);">

                    <Label text="Employee Management"
                           style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2f3640;" />

                    <Separator />

                    <!-- ðŸ”¸ Form Fields -->
                    <GridPane hgap="10" vgap="12" style="-fx-padding: 10;">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
                            <ColumnConstraints prefWidth="200"/>
                            <ColumnConstraints halignment="RIGHT" prefWidth="120"/>
                            <ColumnConstraints prefWidth="200"/>
                        </columnConstraints>

                        <children>
                            <Label text="Employee ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtEmpId" promptText="E001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                            <TextField fx:id="txtName" promptText="Sunil Perera" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                            <Label text="NIC:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtNic" promptText="832451230V" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="DOB:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                            <DatePicker fx:id="dpDob" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                            <Label text="Position:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbPosition" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                            <Label text="Salary:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                            <TextField fx:id="txtSalary" promptText="75000.00" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                            <Label text="Contact No:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtContact" promptText="0712345678" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                            <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                            <TextField fx:id="txtAddress" promptText="No.15 Temple Road, Kalutara" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                            <Label text="Joined Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="dpJoinDate" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                            <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                            <ComboBox fx:id="cmbStatus" prefWidth="200" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
                        </children>
                    </GridPane>

                    <!-- ðŸ”¸ Buttons -->
                    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                        <Button text="Add" onAction="#btnAddOnAction"
                                style="-fx-background-color: #4e73df; -fx-text-fill: white; -fx-background-radius: 8;"/>
                        <Button text="Update" onAction="#btnUpdateOnAction"
                                style="-fx-background-color: #1cc88a; -fx-text-fill: white; -fx-background-radius: 8;"/>
                        <Button text="Delete" onAction="#btnDeleteOnAction"
                                style="-fx-background-color: #e74a3b; -fx-text-fill: white; -fx-background-radius: 8;"/>
                        <Button text="Clear" onAction="#btnClearOnAction"
                                style="-fx-background-color: #858796; -fx-text-fill: white; -fx-background-radius: 8;"/>
                    </HBox>

                    <!-- ðŸ”¸ Table -->
                    <TableView fx:id="tblEmployee" prefHeight="200"
                               style="-fx-background-radius: 10; -fx-border-color: #dcdde1;">
                        <columns>
                            <TableColumn fx:id="colEmpId" text="Employee ID" prefWidth="90"/>
                            <TableColumn fx:id="colName" text="Name" prefWidth="120"/>
                            <TableColumn fx:id="colNic" text="NIC" prefWidth="100"/>
                            <TableColumn fx:id="colDob" text="DOB" prefWidth="100"/>
                            <TableColumn fx:id="colPosition" text="Position" prefWidth="100"/>
                            <TableColumn fx:id="colSalary" text="Salary" prefWidth="90"/>
                            <TableColumn fx:id="colContact" text="Contact No" prefWidth="100"/>
                            <TableColumn fx:id="colAddress" text="Address" prefWidth="150"/>
                            <TableColumn fx:id="colJoinDate" text="Joined Date" prefWidth="100"/>
                            <TableColumn fx:id="colStatus" text="Status" prefWidth="90"/>
                        </columns>
                    </TableView>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
